<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/Event1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mathew.sherehe.Welcome"
    tools:showIn="@layout/activity_welcome"
    >


    <Button
        android:id="@+id/content_login"
        android:background="@drawable/button_layout"
        android:layout_marginTop="350dp"
        android:layout_width="match_parent"
        android:text="Login"
        android:layout_above="@+id/register"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:onClick="Login"/>


    <Button android:id="@+id/content_register"
        android:background="@drawable/button_layout"
        android:layout_marginTop="420dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/login"
        android:text="Register"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/login"
        android:onClick="Register"/>

    <TextView
        android:id="@id/welcome"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Sherehe"
        android:textSize="55sp"
        android:gravity="center_horizontal"
        android:textStyle="bold|italic"
        tools:fontFamily="serif"
        android:textColor=""
        android:textAllCaps="false"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
